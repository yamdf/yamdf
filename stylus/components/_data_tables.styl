.table

  position relative
  z-index 2

  display inline-block
  box-sizing border-box
  width auto
  height auto
  margin 8px

  font-family 'Roboto'

  user-select none
  outline none
  vertical-align top

  &.elevated

    background-color #fff

    border-radius 4px

    elevation('2')

  .header

    position relative

    box-sizing border-box
    width 100%
    height 64px
    lateralPadding(16px)

    color rgba(0, 0, 0, .87)

    font-size: 20px
    line-height 64px

    .icons

      float right

      i.material-icons
        line-height 64px

  table

    position relative

    box-sizing border-box
    width auto
    height auto

    border-collapse collapse

    thead
    tbody

      width 100%
      height auto

      tr

        box-sizing border-box
        width 100%
        height 48px
        border-bottom 1px solid rgba(0, 0, 0, .12)

        transition 250ms all cubic-bezier(0.4, 0.0, 0.2, 1)

        &:last-of-type
          border-bottom none

        &:hover
          background-color rgba(0, 0, 0, .06)

        th
        td

          box-sizing border-box
          min-width 56px
          height 48px
          lateralPadding(16px)

          color rgba(0, 0, 0, .54)

          font-size 14px
          font-weight 600
          text-align left

          white-space nowrap

          &[numeric]
          &.numeric
            text-align right

          &[divided]
          &.divided
            border-right 1px solid rgba(0, 0, 0, .12)

        td

          color rgba(0, 0, 0, .87)

          font-weight 500

    thead
      tr
        &:last-of-type
          border-bottom 1px solid rgba(0, 0, 0, .12)

        &:hover
          background-color inherit

    &[numeric]
    &.numeric
      th
      td

        text-align right

        &[non-numeric]
        &.non-numeric
          text-align left
