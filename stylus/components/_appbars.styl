.appbar

  position relative
  z-index 4

  display block
  box-sizing border-box
  width 100%
  height 56px
  padding-left 16px
  border none
  margin 0px

  background-color #6200ee
  color #fff

  font-family "Roboto"
  font-size 20px
  font-weight 500
  line-height 56px

  user-select none
  outline none

  elevation('4')

  i.material-icons

    padding-left 24px

    line-height @height

    vertical-align top

  > i.material-icons

    padding-left 0px
    padding-right 32px

  .icons

    padding-right 16px

    float right
