.menu

  position absolute
  z-index 8

  display inline-block
  box-sizing border-box
  max-width 280px
  min-width 128px
  lateralPadding(0px)
  padding-top 8px
  padding-bottom 8px

  background-color #fff
  color rgba(0, 0, 0, .87)

  font-family 'Roboto'
  font-size 14px

  border-radius 4px
  transition 250ms all cubic-bezier(.4, .0, .2, 1)
  user-select none
  outline none
  list-style-type none

  transform scale(0)
  transform-origin 0% 0%

  elevation('8')

  li
  .menu-element

    position relative

    box-sizing border-box
    width 100%
    height 48px
    lateralPadding(16px)

    line-height @height

    transition 250ms all cubic-bezier(0.4, 0.0, 0.2, 1)
    list-style-type none

    &:hover
      background-color rgba(0, 0, 0, .06)

  &.top
    transform-origin 50% 0%

  &.left.top
    transform-origin 0% 0%

  &.right.top
    transform-origin 100% 0%

  &.bottom
    transform-origin 50% 100%

  &.left.bottom
    transform-origin 0% 100%

  &.right.bottom
    transform-origin 100% 100%

  &.left
    transform-origin 0% 50%

  &.right
    transform-origin 100% 50%

  &.center
    transform-origin 50% 50%
