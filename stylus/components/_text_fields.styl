.textfield

  position relative
  z-index 2

  display inline-block
  box-sizing border-box
  width 280px
  height 72px
  margin 8px

  vertical-align top
  user-select none
  outline none

  input[type="text"]
  input[type="password"]

    position relative

    box-sizing border-box
    width 100%
    height 56px
    padding-top 18px
    lateralPadding(12px)
    border none
    border-bottom 1px solid rgba(0, 0, 0, .38)

    background-color rgba(0, 0, 0, .04)
    color rgba(0, 0, 0, .87)

    font-family 'Roboto'
    font-size 16px
    font-weight 500

    border-top-left-radius 4px
    border-top-right-radius 4px

    outline none
    -webkit-appearance none

  label

    position absolute
    top 18px
    left 12px

    color rgba(0, 0, 0, .54)

    font-family 'Roboto'
    font-size 16px
    font-weight 500

    pointer-events none
    transition 100ms all cubic-bezier(.4, .0, .2, 1)

    &.active
    &.focused

      top 10px

      color #6200ee

      font-size 12px

    &.focused
      color rgba(0, 0, 0, .54)

  .border

    position absolute
    top 54px
    left 50%

    width 0px
    height 2px

    background-color #6200ee

    transition 100ms all cubic-bezier(.4, .0, .2, 1)

    &.active

      left 0px

      width 100%
